# Google OAuth Configuration
# Get these from: Google Cloud Console -> APIs & Services -> Credentials
# Create an OAuth 2.0 Client ID and add redirect URI: http://localhost:5173/api/auth/callback/google
GOOGLE_CLIENT_ID=your-google-client-id-here
GOOGLE_CLIENT_SECRET=your-google-client-secret-here

# Encryption Key for Claude OAuth Tokens
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
# or: bun -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
ENCRYPTION_KEY=your-base64-encoded-32-byte-key-here

# Application Base URL
PUBLIC_BASE_URL=http://localhost:5173

# Polar Payment Configuration
# Get these from: Polar Dashboard -> Settings -> API Keys
POLAR_ACCESS_TOKEN=your-polar-access-token-here
# Create a $20/month subscription product in Polar Dashboard -> Products
POLAR_PRODUCT_ID=your-polar-product-id-here
# Create a webhook endpoint in Polar Dashboard -> Webhooks
POLAR_WEBHOOK_SECRET=your-polar-webhook-secret-here
# Set to 'sandbox' for development, 'production' for live
POLAR_MODE=sandbox

# Resend Email Configuration
# Get these from: Resend Dashboard -> API Keys -> Create API Key
RESEND_API_KEY=re_your-resend-api-key-here
# Verified sender email address (format: "Name <email@domain.com>")
# You must verify this domain in Resend Dashboard first
RESEND_FROM_EMAIL=Rachel Cloud <noreply@rachel.cloud>

# Admin Dashboard
# Email address of the admin user (case-insensitive match)
ADMIN_EMAIL=lorenzo@example.com
